{
  "name": "paramorph",
  "version": "1.12.2",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf lib #",
    "compile-ts": "tsc",
    "compile-coffee": "coffee -c -m -o lib src",
    "copy-js": "rsync -avm --include='*.js' --include='*/' --exclude='*' ./src/ ./lib/",
    "compile": "npm run compile-ts && npm run compile-coffee && npm run copy-js",
    "test": "mocha --use_strict lib/mocha.config.js $(find lib -name \"*.spec.js\")",
    "integration-test": "cd test-project && npm install && npm run clean-build",
    "copy-package.json": "mkdir -p lib/ && cp package.json lib/",
    "build": "npm run compile && npm run copy-package.json && npm run test",
    "clean-build": "npm run clean && npm run build",
    "watch": "watch 'npm run clean-build' src",
    "deploy": "npm run clean-build && npm publish lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paramorph/paramorph.git"
  },
  "keywords": [
    "static",
    "website",
    "blog",
    "generator",
    "typescript",
    "react",
    "jekkyl"
  ],
  "author": "Maciej Cha≈Çapuk <maciej@chalapuk.pl>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/paramorph/paramorph/issues"
  },
  "homepage": "https://github.com/paramorph/paramorph",
  "description": "",
  "dependencies": {
    "history": "^4.7.2",
    "js-yaml": "^3.11.0",
    "loader-utils": "^1.1.0",
    "markdown-it": "^8.4.0",
    "offensive": "^1.0.3",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-hot-loader": "^4.3.3",
    "react-router-dom": "^4.2.2",
    "source-map-support": "^0.5.6",
    "universal-router": "^6.0.0"
  },
  "devDependencies": {
    "@types/history": "^4.6.2",
    "@types/html-entities": "^1.2.16",
    "@types/js-yaml": "^3.11.1",
    "@types/loader-utils": "^1.1.3",
    "@types/react": "^16.0.40",
    "@types/react-dom": "^16.0.4",
    "@types/react-hot-loader": "^4.1.0",
    "@types/react-router-dom": "^4.2.4",
    "@types/webpack": "^4.4.1",
    "@types/webpack-env": "^1.13.5",
    "coffeescript": "^2.2.3",
    "fake-promise": "^2.3.2",
    "mocha": "^5.0.4",
    "should": "^13.2.1",
    "should-sinon": "0.0.6",
    "sinon": "^6.0.0",
    "typescript": "^2.7.2",
    "watch": "^1.0.2",
    "webpack": "^4.12.0"
  }
}
