{
  "name": "paramorph",
  "version": "1.12.2",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf lib #",
    "compile-ts": "tsc --project src/tsconfig.prod.json",
    "copy-js": "rsync -avm --include='*.js' --include='*.d.ts' --include='*/' --exclude='*' ./src/ ./lib/",
    "compile": "npm run compile-ts && npm run copy-js",
    "test": "TS_NODE_PROJECT=./src/tsconfig.test.json TS_NODE_FILES=1 mocha -r source-map-support/register -r ts-node/register ./src/mocha.config.ts $(find -name \"*.spec.ts*\")",
    "copy-package.json": "mkdir -p lib/ && cp package.json lib/",
    "copy-static-files": "mkdir -p lib/loader && cp src/loader/MarkdownPage.tsx lib/loader",
    "copy": "npm run copy-package.json && npm run copy-static-files",
    "link-modules": "ln -sf ../node_modules lib/node_modules",
    "build": "npm run compile && npm run copy && npm run link-modules && npm run test",
    "clean-build": "npm run clean && npm run build",
    "watch": "watch 'npm run clean-build' src",
    "deploy": "npm run clean-build && npm publish lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paramorph/paramorph.git"
  },
  "keywords": [
    "static",
    "website",
    "blog",
    "generator",
    "typescript",
    "react",
    "jekkyl"
  ],
  "author": "Maciej Cha≈Çapuk <maciej@chalapuk.pl>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/paramorph/paramorph/issues"
  },
  "homepage": "https://github.com/paramorph/paramorph",
  "description": "",
  "dependencies": {
    "history": "^4.7.2",
    "js-yaml": "^3.12.0",
    "loader-utils": "^1.1.0",
    "markdown-it": "^8.4.2",
    "offensive": "^2.1.1",
    "prop-types": "^15.6.2",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-hot-loader": "^4.6.2",
    "source-map-support": "^0.5.9",
    "universal-router": "^7.0.0"
  },
  "devDependencies": {
    "@types/history": "^4.7.2",
    "@types/js-yaml": "^3.11.2",
    "@types/loader-utils": "^1.1.3",
    "@types/markdown-it": "0.0.7",
    "@types/mocha": "^5.2.5",
    "@types/prop-types": "^15.5.8",
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.0.11",
    "@types/react-hot-loader": "^4.1.0",
    "@types/should": "^13.0.0",
    "@types/should-sinon": "0.0.5",
    "@types/sinon": "^7.0.3",
    "@types/webpack": "^4.4.21",
    "@types/webpack-env": "^1.13.6",
    "fake-promise": "^2.3.2",
    "mocha": "^5.2.0",
    "should": "^13.2.3",
    "should-sinon": "0.0.6",
    "sinon": "^7.2.2",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.2",
    "watch": "^1.0.2",
    "webpack": "^4.27.1"
  }
}
