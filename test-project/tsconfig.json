{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": false,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "alwaysStrict": true,
    "diagnostics": true,
    "declaration": false,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": [ "ES5", "ES6", "ES7", "DOM" ],
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "lf",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "./lib/",
    "strictNullChecks": true,
    "sourceMap": false,
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "@project/config": "./_config.yml",
    },
    "types": [
      "node",
      "webpack",
      "webpack-env",
      "react",
      "react-dom",
      "react-router-dom",
      "react-hot-loader",
      "js-yaml",
      "html-entities"
    ]
  },
  "include": [
    "../modules.d.ts",
    "../src/**/*.tsx",
    "../src/**/*.ts",
    "./**/*.ts",
    "./**/*.tsx",
  ],
  "exclude": [
  ]
}

